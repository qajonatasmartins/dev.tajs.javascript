{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run-project-tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "PROJECT_DIR=$(dirname \"$0\"); cd \"$PROJECT_DIR\"; npm run test:debug"
      ],
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-l"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}

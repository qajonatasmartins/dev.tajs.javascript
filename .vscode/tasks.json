{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run-project-tests",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"PROJECT_DIR=$(dirname ${file}); cd \"${PROJECT_DIR}\"; yarn test:debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}
